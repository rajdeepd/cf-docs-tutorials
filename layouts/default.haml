/[if IE]
/[if lt IE 7 ] <html lang="en" dir="ltr" class="no-js old_ie ie6">
/[if IE 7 ] <html lang="en" dir="ltr" class="no-js old_ie ie7">
/[if IE 8 ] <html lang="en" dir="ltr" class="no-js ie8">
/[if IE 9 ] <html lang="en" dir="ltr" class="no-js ie9">
%html{:lang => "en", 'xmlns:og'=>"http://ogp.me/ns#"}
  %head
    %meta{:charset => "utf-8"}
    %meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}
    %meta{:content => "VMware", :name => "author"}/
    %meta{:content => "Copyright VMware 2011. All Rights Reserved.", :name => "copyright"}/
    %meta{:content => "juhk3p2B-UhzEjLXtqFwDMVLo5Lmy4ZP-zVe7Gxo2Dw", :name => "google-site-verification"}/
    %meta{:content => "en-us", "http-equiv" => "Content-Language"}/
    %meta{:content => "false", "http-equiv" => "imagetoolbar"}/
    %meta{:content => "true", :name => "MSSmartTagsPreventParsing"}/
    %meta{:content => "all", :name => "robots"}/

    -if @config[:fb_app_id]
      %meta{:property => "fb:app_id", :content => @config[:fb_app_id]}

    %meta{:property => 'og:type', :content => 'website'}
    %meta{:property => "og:url", :content => "#{url(@config, :docs_app)}#{@item.path}"}
    %meta{:property => 'og:image', :content => @item[:image] || "#{url(@config, :docs_app)}/images/cf100.png"}
    %meta{:property => 'og:title', :content => "Cloud Foundry | #{@item[:title]}"}
    %meta{:property => 'og:description', :content => @item[:description]}
    %meta{:property => "og:locale", :content => "en_US"}
    %title="Cloud Foundry | #{@item[:title]}"
    %link{:href => "/stylesheets/print.css", :media => "print", :rel => "stylesheet", :type => "text/css"}/
    %link{:href => "/stylesheets/master.css", :media => "screen", :rel => "stylesheet", :type => "text/css"}/
    %link{:href => "favicon.ico", :rel=>'shortcut icon'}

    %link{:href => "/stylesheets/uv_active4d.css", :rel => "stylesheet", :type => "text/css"}/
    %link{:href => "/stylesheets/documentation.css", :media => "screen", :rel => "stylesheet", :type => "text/css"}/
    %link{:href => "/stylesheets/pygments.css", :media => "screen", :rel => "stylesheet", :type => "text/css"}/
    %script{:src => "/js/jquery-1.6.4.min.js", :type => "text/javascript"}
    %script{:src => "/js/documentation.js", :type => "text/javascript"}
    %script{:src => "/js/jquery.easing.js", :type => "text/javascript"}
    %script{:src => "/js/jquery.social.share.1.2.min.js", :type => "text/javascript"}

    /[if lt IE 9 ] <link href="/stylesheets/ie.css" media="screen" rel="stylesheet" type="text/css" />
    /[if lt IE 8 ] <link href="/stylesheets/ie7.css" media="screen" rel="stylesheet" type="text/css" />
    %link{:href => "/stylesheets/master-cf.css", :media => "screen", :rel => "stylesheet", :type => "text/css"}/
  %body.api
    .wrapper
      #header.container
        .site-wrap
          .container
            .span-6.logo-wrap
              %a{:href => url(@config, :www_app)}
                %img{:alt => "Cloud Foundry: The Industry's First Open Platform As A Service", :height => "70", :src => "/images/logo_header_cloudfoundry.png", :width => "373"}
                  %span.replaced Cloud Foundry: The Industry's First Open Platform As A Service
            .span-9.last
              .right
                %form.search-form{:action => "#{url(@config, :www_app)}/search", :method => "get", :onsubmit => "return submitQuery()"}
                  %input.search-input{:autocomplete => "off", :name => "q", :placeholder=> "search", :type => "text", :value => ""}/
                %ul.super-nav
                  %li
                    %a{:href => "#{url(@config, :my_app)}/signup"} Get an Account
                  %li
                    %a{:href => "#{url(@config, :my_app)}/micro"} Download Micro
                  %li
                    %a{:href => "http://support.cloudfoundry.com", :rel => "external", :target => "_blank"} Support
                  %li
                    %a{:href => "http://status.cloudfoundry.com", :target => "_blank"} Status
              #nav
                %ul
                  %li.selected
                    %a{:href => "/"} Home
                  %li
                    %a{:href => "#{url(@config, :www_app)}/getinvolved"} Get Involved
                  %li
                    %a{:href => "#{url(@config, :www_app)}/partners"} Partners
                  %li
                    %a{:href => url(@config, :blog_app)} Blog
                  %li
                    %a{:href => "#{url(@config, :www_app)}/about"} About
      #main.container
        .content-wrap
          .header-wrap.clearfix
            .site-wrap
              %h1=proper_title(@item)
              %p.sub-head=@item[:title]
              -#%a.button-plain{:href => "#"} Start.

          .site-wrap
            .container.content
              .span-15.prepend-top
                .span-4
                  .sub-nav
                    %form.search-form-docs{:action => "#{url(@config, :www_app)}/search", :method => "get", :onsubmit => "return submitQuery()"}
                      %input.search-input-docs{:autocomplete => "off", :name => "q", :placeholder=> "search docs", :type => "text", :value => "more:docs"}/
                    %br/
                    %br/
                    #js-sidebar.sidebar-shell
                      .js-accordion-list.sidebar-module
                        %ul
                          %li.js-topic
                            %h3
                              %a{:href => "#"} Spring
                            %ul.js-guides
                              %li.js-subtopic
                                %a{:href => "/spring/tutorials/overview.html"} Overview
                              %li.js-subtopic
                                %a{:href => "/spring/tutorials/springmvc-jpa-postgres/spring-getting-started-with-sts.html"} Spring MVC using JPA with PostgreSQL
                                %ul.js-subguides
                                  %li
                                    %a{:href => "/spring/tutorials/springmvc-jpa-postgres/springmvc-template-project.html"}1. Create a Spring MVC Hello World Application
                                  %li
                                    %a{:href => "/spring/tutorials/springmvc-jpa-postgres/spring-expensereport-app-tutorial.html"}2. Create a Spring MVC App with PostgreSQL
                                  %li
                                    %a{:href => "/spring/tutorials/springmvc-jpa-postgres/expensereport-app-with-spring-security.html"}3. Add Spring Security to Spring MVC App
                              %li.js-subtopic
                                %a{:href => "/spring/tutorials/springmvc-mongodb/springmvc-with-mongodb.html"} Spring MVC with MongoDB
                                %ul.js-subguides
                                  %li
                                    %a{:href => "/spring/tutorials/springmvc-mongodb/spring-expensereport-app-using-mongodb.html"}1. Create a Spring MVC App using MongoDB
                                  %li
                                    %a{:href => "/spring/tutorials/springmvc-mongodb/springmvc-app-with-mongodb-deployment-to-cloudfoundry.html"}2. Deploying on Cloud Foundry
                              %li.js-subtopic
                                %a{:href => "/spring/tutorials/springmvc-redis/springmvc-with-redis.html"} Spring MVC with Redis
                                %ul.js-subguides
                                  %li
                                    %a{:href => "/spring/tutorials/springmvc-redis/spring-expensereport-app-using-redis.html"}1. Create a Spring MVC App using Redis
                                  %li
                                    %a{:href => "/spring/tutorials/springmvc-redis/springmvc-app-with-redis-deployment-to-cloudfoundry.html"}2. Deploying on Cloud Foundry
                          %li.js-topic
                            %h3
                              %a{:href => "#"} Rails
                            %ul.js-guides
                              %li.js-subtopic
                                %a{:href => "/ruby/rails-tutorial/rails-app-with-postgres.html"} Rails App with PostgreSQL
                                %ul.js-subguides
                                  %li
                                    %a{:href => "/ruby/rails-tutorial/postgres/rails-new-template-with-postgres.html"}1. Create Template app with Postgres
                                  %li
                                    %a{:href => "/ruby/rails-tutorial/postgres/rails-user-login.html"}2. Adding User Authentication
                                  %li
                                    %a{:href => "/ruby/rails-tutorial/postgres/rails-expense-user-flow.html"}3. Adding Expense User Flow
                                  %li
                                    %a{:href => "/ruby/rails-tutorial/postgres/rails-expense-admin-flow.html"}4. Adding Expense Admin Flow
                                  %li
                                    %a{:href => "/ruby/rails-tutorial/postgres/rails-hosting-application-with-vmc.html"}5. Rails Application Deployment with vmc
                            %ul.js-guides
                              %li.js-subtopic
                                %a{:href => "/ruby/rails-tutorial/rails-app-with-mongodb.html"} Rails App with MongoDB
                                %ul.js-subguides
                                  %li
                                    %a{:href => "/ruby/rails-tutorial//mongodb/rails-new-template-with-mongodb.html"}1. Create Template app with MongoDB
                                  %li
                                    %a{:href => "/ruby/rails-tutorial/mongodb/rails-user-login.html"}2. Adding User Authentication
                                  %li
                                    %a{:href => "/ruby/rails-tutorial/mongodb/rails-expense-user-flow.html"}3. Adding Expense User Flow
                                  %li
                                    %a{:href => "/ruby/rails-tutorial/mongodb/rails-expense-admin-flow.html"}4. Adding Expense Admin Flow
                                  %li
                                    %a{:href => "/ruby/rails-tutorial/mongodb/rails-hosting-application-with-vmc.html"}5. Rails Application Deployment with vmc
                    %p
                      %strong
                        %a{:href => "/faq.html"} FAQ
                      Frequently asked questions.
                    %p
                      %strong
                        %a{:href => "http://stackoverflow.com/questions/tagged/cloudfoundry", :target => "_blank"} Forums
                      Join the conversation.
                    %p
                      %strong
                        %a{:href => "http://webinars.cloudfoundry.com"} Webinars
                      Learn more.
                  %p.forgot_pass
                    %a{:href => "http://my.cloudfoundry.com/passwd"} Forgot password?
                .span-11.last
                  %h2="#{@item[:description] || @item[:title]}"
                  %p.tags
                    -if @item[:tags]
                      %strong Tags:
                      %span
                        =tags_for(@item, base_url: "/tags/", separator: '')
                  %p.timestamp
                    %strong Last Updated:
                    %span
                      =@item[:mtime].to_date
                  #social-share
                  = yield
    #footer.container
      .site-wrap
        .row
          .span-3.social-icons
            %a.twitter.replaced{:href => "http://twitter.com/cloudfoundry", :rel => "external", :target => "_blank"} Twitter
            %a.facebook.replaced{:href => "http://facebook.com/cloudfoundry", :rel => "external", :target => "_blank"} Facebook
            %a.youtube.replaced{:href => "http://www.youtube.com/cloudfoundry", :rel => "external", :target => "_blank"} YouTube
          .prepend-2.span-5
            %p
              %a{:href => "#{url(@config, :www_app)}/faq"} FAQ
              |
              %a{:href => "http://stackoverflow.com/questions/tagged/cloudfoundry", :rel => "external"} Forums
              |
              %a{:href => url(@config, :blog_app), :rel => "external"} Blog
              |
              %a{:href => "#{url(@config, :www_app)}/jobs"} Jobs
              |
              %a{:href => "#{url(@config, :www_app)}/legal"} Legal
              |
              %a{:href => "#{url(@config, :www_app)}/terms"} Terms
              |
              %a{:href => "http://www.vmware.com/help/privacy.html", :rel => "external", :target => "_blank"} Privacy
          .span-5.last.right
            %p="Copyright &copy; #{DateTime.now.year} VMware, Inc. All rights reserved."
